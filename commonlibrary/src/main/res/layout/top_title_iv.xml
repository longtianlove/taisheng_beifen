<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/base_framelayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/size_title25"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:transitionName="title1">

        <FrameLayout
            android:layout_width="@dimen/weight_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_10"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_back_new"
                android:gravity="center_vertical|left"
                android:text="   "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font14" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/ll_center_top"
            android:layout_width="@dimen/weight_0"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font18" />

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_right"
            android:layout_width="@dimen/weight_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/font10"
            android:layout_weight="1"
            android:paddingLeft="@dimen/magin_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_right_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/margin_5"
                    android:src="@drawable/icon_eliminate"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font14"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
