<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/magin_3"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="@dimen/magin_8"
            android:layout_height="@dimen/magin_8"
            android:visibility="gone"
            android:background="@drawable/circle_red"
            android:layout_alignRight="@+id/iv_icon"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_5"
        android:layout_below="@+id/iv_icon"
        android:textSize="@dimen/font10" />

</LinearLayout>
