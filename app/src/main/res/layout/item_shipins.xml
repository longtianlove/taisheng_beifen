<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/magin_10"
        android:orientation="vertical"
        android:paddingBottom="@dimen/magin_10"
        android:paddingLeft="@dimen/magin_12"
        android:paddingRight="@dimen/magin_12">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="@dimen/radius_5"
            android:layout_marginTop="@dimen/magin_15"
            android:layout_height="@dimen/size_195">

        <com.taisheng.now.view.jiankangjiangtang.SampleCoverVideo
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_shipintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/magin_8"
            android:layout_marginTop="@dimen/magin_8"
            android:singleLine="true"
            android:text="这里是视频名称这里是视频名称"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:src="@drawable/shipinbofangliang" />

                <TextView
                    android:id="@+id/tv_shipinbofangshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="2684"
                    android:textColor="@color/colorcccccc"
                    android:textSize="@dimen/font12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shipinguanzhu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shipinguanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:src="@drawable/shipinguanzhu_backgrounnd" />

                <TextView
                    android:id="@+id/tv_shipinguanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:enabled="false"
                    android:text="2684"
                    android:textColor="@color/selector_color_shipin"
                    android:textSize="@dimen/font12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_shipindianzan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_shipindianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:src="@drawable/shipindianzan_backgrounnd" />

                <TextView
                    android:id="@+id/tv_shipindianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="2684"
                    android:textColor="@color/selector_color_shipin"
                    android:textSize="@dimen/font12" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>