                android:background="@color/coloreeeeee" />

            <TextView
                android:id="@+id/ll_chongqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_chongqi"
                android:drawablePadding="@dimen/magin_15"
                android:drawableRight="@drawable/jiantou_hui"
                android:paddingBottom="@dimen/magin_10"
                android:paddingLeft="@dimen/magin_12"
                android:paddingRight="@dimen/magin_12"
                android:paddingTop="@dimen/magin_10"
                android:text="@string/watch_msg07"
                android:textColor="@color/color666666"
                android:textSize="@dimen/font14" />

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:background="@color/coloreeeeee" />

            <TextView
                android:id="@+id/ll_huifuchuchang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_huifuchuchang"
                android:drawablePadding="@dimen/magin_15"
                android:drawableRight="@drawable/jiantou_hui"
                android:paddingBottom="@dimen/magin_10"
                android:paddingLeft="@dimen/magin_12"
                android:paddingRight="@dimen/magin_12"
                android:paddingTop="@dimen/magin_10"
                android:text="@string/watch_msg08"
                android:textColor="@color/color666666"
                android:textSize="@dimen/font14"
                android:visibility="gone" />

            <TextView
                style="@style/my_line_h"
                android:background="@color/coloreeeeee"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
