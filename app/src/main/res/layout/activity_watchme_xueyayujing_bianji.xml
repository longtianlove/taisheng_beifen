<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView style="@style/iv_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_12"
                    android:layout_marginLeft="@dimen/magin_12"
                    android:layout_marginTop="@dimen/magin_12"
                    android:text="@string/watch_msg20"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />


                <EditText
                    android:id="@+id/tv_gaoyazuida"
                    android:layout_width="@dimen/weight_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:hint="@string/please_input"
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/magin_12"
                    android:text="@string/watch_msg19"
                    android:textColor="#DFDCDC"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:background="@color/coloreeeeee"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_12"
                    android:layout_marginLeft="@dimen/magin_12"
                    android:layout_marginTop="@dimen/magin_12"
                    android:text="@string/watch_msg21"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />


                <EditText
                    android:id="@+id/tv_gaoyazuixiao"
                    android:layout_width="@dimen/weight_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:inputType="number"
                    android:hint="@string/please_input"
                    android:textColor="@color/color666666"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/magin_12"
                    android:text="@string/watch_msg19"
                    android:textColor="#DFDCDC"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_height="@dimen/size_10"
                android:background="@color/coloreeeeee"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_12"
                    android:layout_marginLeft="@dimen/magin_12"
                    android:layout_marginTop="@dimen/magin_12"
                    android:text="@string/watch_msg22"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />


                <EditText
                    android:id="@+id/tv_diyazuida"
                    android:layout_width="@dimen/weight_0"
