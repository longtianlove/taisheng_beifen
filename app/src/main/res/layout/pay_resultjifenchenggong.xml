<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/icon_back_new"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付失败"
                android:textColor="#333333"
                android:textSize="16dp" />


        </RelativeLayout>


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_chenggong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal
"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/zhifuchenggong"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="订单支付成功"
                        android:textColor="#ff666666"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="恭喜您此次支付获得50积分"
                        android:textColor="#ff666666"
                        android:textSize="12sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/btn_chakandingdan"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/dizhibianji_save"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="查看订单"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shibai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal
"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/zhifushibai"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:text="订单支付失败"
                        android:textColor="#ff666666"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="哎呀，貌似网络出了点小问题~"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/btn_chongxinzhifu"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/dizhibianji_save"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="重新支付"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>


                </LinearLayout>

                <TextView
                    android:id="@+id/btn_fanhuishouye"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/login_button_disabled"
                    android:gravity="center"
                    android:text="返回首页"
                    android:textColor="@color/white"
                    android:textSize="14sp"></TextView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>