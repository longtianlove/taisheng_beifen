<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/my_line_h"
        android:background="@color/colorf8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/weight_0"
            android:layout_height="@dimen/size_7"
            android:layout_marginLeft="@dimen/magin_8"
            android:layout_weight="1"
            android:background="@drawable/progressbar_background"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/myprogressbar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_now_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_6"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/color00c8aa"
            android:textSize="@dimen/font18" />

        <TextView
            android:id="@+id/tv_all_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="/00"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font18" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin_25"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_25"
        android:gravity="center|left"
        android:text="当吃完很多肉后，你会(   )"
        android:textColor="@color/color333333"
        android:textSize="@dimen/font18" />

    <TextView
        style="@style/my_line_h"
        android:layout_height="@dimen/size_10"
        android:background="@color/colorf6f6f6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/magin_20"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="@dimen/magin_12"
            android:paddingRight="@dimen/magin_12">

            <LinearLayout
                android:id="@+id/ll_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_25"
                android:paddingTop="@dimen/magin_25">

                <TextView
                    android:id="@+id/tv_a_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_background"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/selector_color"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/size_1"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:gravity="center_vertical"
                    android:text="咦？吃了怎么这么不舒服，感到阴郁，发怒，难道肉不适合自己？"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_25"
                android:paddingTop="@dimen/magin_25">

                <TextView
                    android:id="@+id/tv_b_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_background"

                    android:enabled="false"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@color/selector_color"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/size_1"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:gravity="center_vertical"
                    android:text="没有什么特别的感觉"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_25"
                android:paddingTop="@dimen/magin_25">

                <TextView
                    android:id="@+id/tv_c_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_background"

                    android:enabled="false"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/selector_color"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/size_1"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:gravity="center_vertical"
                    android:text="感觉好极了，尤其是在吃了牛排、汉堡、羊肉等高热量食物以后"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_25"
                android:paddingTop="@dimen/magin_25">

                <TextView
                    android:id="@+id/tv_d_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_background"

                    android:enabled="false"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/selector_color"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/size_1"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:gravity="center_vertical"
                    android:text="感觉好极了，尤其是在吃了牛排、汉堡、羊肉等高热量食物以后"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/magin_25"
                android:paddingTop="@dimen/magin_25">

                <TextView
                    android:id="@+id/tv_e_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option_background"

                    android:enabled="false"
                    android:gravity="center"
                    android:text="E"
                    android:textColor="@color/selector_color"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/size_1"
                    android:layout_marginLeft="@dimen/magin_2"
                    android:gravity="center_vertical"
                    android:text="感觉好极了，尤其是在吃了牛排、汉堡、羊肉等高热量食物以后"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>