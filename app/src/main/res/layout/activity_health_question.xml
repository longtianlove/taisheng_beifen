<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        style="@style/my_line_h"
        android:background="@color/colorf8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/weight_0"
            android:layout_height="@dimen/size_7"
            android:layout_marginLeft="@dimen/magin_8"
            android:layout_weight="1"
            android:background="@drawable/progressbar_background"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/myprogressbar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_now_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_6"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/color00c8aa"
            android:textSize="@dimen/font18" />

        <TextView
            android:id="@+id/tv_all_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="/00"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font18" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin_25"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_25"
        android:gravity="center|left"
        android:text="当吃完很多肉后，你会(   )"
        android:textColor="@color/color333333"
        android:textSize="@dimen/font18" />

    <TextView
        style="@style/my_line_h"
        android:layout_height="@dimen/size_10"
        android:background="@color/colorf6f6f6" />

    <ListView
        android:id="@+id/lv_topic"
        style="@style/my_lv"></ListView>

</LinearLayout>