<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin_12"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_6">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="李先生"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font14" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_25"
                android:layout_toRightOf="@+id/tv_name"
                android:gravity="center"
                android:text="152****8219"
                android:textColor="@color/color666666"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_ismdefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_20"
                android:layout_toRightOf="@+id/tv_phone"
                android:background="@drawable/bg_addr_default"
                android:paddingBottom="@dimen/magin_2"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/magin_2"
                android:text="默认"
                android:textColor="@color/colorffad02"
                android:textSize="@dimen/font9" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toLeftOf="@+id/tv"
            android:maxLines="2"
            android:text="陕西省 西安市 雁塔区 万象汇"
            android:textColor="@color/color666666"
            android:textSize="@dimen/font12" />

        <TextView
            android:id="@+id/tv_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color999999"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv"
            style="@style/my_line_v"
            android:layout_height="@dimen/size_20"
            android:layout_below="@+id/ll"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toLeftOf="@+id/tv_bianji"
            android:background="@color/color999999" />

    </RelativeLayout>

</LinearLayout>