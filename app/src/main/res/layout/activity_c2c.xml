<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="StarRTC"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/title_left_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_right_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/title_right_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_shipin" />
        </RelativeLayout>
    </RelativeLayout>





    <TextView
        android:id="@+id/tv_input_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:focusable="true"
        android:visibility="gone"
        android:gravity="top" />

    <FrameLayout
        android:id="@+id/fl_emotion_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
