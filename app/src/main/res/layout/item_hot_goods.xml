<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:round="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_1"
        app:cardCornerRadius="@dimen/radius_5"
        app:cardElevation="@dimen/magin_2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.th.j.commonlibrary.wight.RoundImgView
                android:id="@+id/sdv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                round:leftUpCorner="true"
                round:rightUpCorner="true"
                round:leftDownCorner="false"
                round:rightDownCorner="false"
                round:roundHeight2="@dimen/radius_5"
                round:roundWidth2="@dimen/radius_5"
                 />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="桂圆红枣枸杞茶养生滋补首选佳品"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_goods_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22222222"
                    android:textColor="#ffff3b30"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_jifennduihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@drawable/icon_jifenduihuan"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:text="月销20111件"
                android:textColor="#ff999999"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>