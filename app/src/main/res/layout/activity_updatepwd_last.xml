<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/my_line_h"
        android:background="@color/colorf8f8f8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_50"
        android:src="@drawable/pwd_update_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_20"
        android:gravity="center"
        android:text="@string/updata_psw_success"
        android:textColor="@color/color00c8aa"
        android:textSize="@dimen/font14" />

    <TextView
        android:id="@+id/tv_back_memessage"
        style="@style/my_bt"
        android:layout_marginLeft="@dimen/magin_35"
        android:layout_marginRight="@dimen/magin_35"
        android:layout_marginTop="@dimen/magin_40"
        android:enabled="true"
        android:text="@string/back_persional"
       ></TextView>

</LinearLayout>