<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_300"
        android:scaleType="fitXY"
        android:src="@drawable/icon_xinlv_background" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_115"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/icon_xin"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_xinlv_label"></View>

            <TextView
                android:id="@+id/tv_xinlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#80ffffff"
                android:shadowRadius="3.0"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#80ffffff"
                android:shadowRadius="3.0"
                android:text="次/分"
                android:textColor="#ffffffff"

                android:textSize="12sp" />



        </LinearLayout>
        <TextView
            android:id="@+id/tv_yuanchengceliang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="远程测量"
            android:textColor="@color/color00c8aa"
            />

    </LinearLayout>

    <com.taisheng.now.view.WithListViewScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginTop="@dimen/magin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/my_line_v"
                    android:layout_width="@dimen/size_3"
                    android:layout_height="@dimen/size_12"
                    android:background="@color/colorff9d3c" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_5"
                    android:layout_marginRight="@dimen/magin_12"
                    android:gravity="center_vertical|left"
                    android:text="日统计"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:background="@color/colore6e6e6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_215"
                android:layout_margin="@dimen/magin_10">

                <WebView
                    android:id="@+id/tv_html_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginTop="@dimen/magin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    style="@style/my_line_v"
                    android:layout_width="@dimen/size_3"
                    android:layout_height="@dimen/size_12"
                    android:background="@color/colorff9d3c" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/magin_5"
                    android:layout_marginRight="@dimen/magin_12"
                    android:gravity="center_vertical|left"
                    android:text="月统计"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:background="@color/colore6e6e6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_215"
                android:layout_margin="@dimen/magin_10">

                <WebView
                    android:id="@+id/tv_html_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>


        </LinearLayout>
    </com.taisheng.now.view.WithListViewScrollView>


</RelativeLayout>


