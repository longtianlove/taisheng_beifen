<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/magin_12"
        android:paddingRight="@dimen/magin_12"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="@dimen/weight_0"
            android:layout_height="@dimen/size_30"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/search_background2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_15"
                android:src="@drawable/icon_search_grey" />

            <EditText
                android:id="@+id/et_doctor_search"
                android:layout_width="@dimen/weight_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/magin_6"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/doctor02"
                android:textColor="#ff666666"
                android:textColorHint="#ff999999"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_search_guanbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="11dp"
                android:src="@drawable/icon_guanbi" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_9"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="@color/color28b28b"
            android:textSize="@dimen/font14" />
    </LinearLayout>
</merge>
