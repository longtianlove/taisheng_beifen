<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView style="@style/iv_title" />

    <TextView
        style="@style/my_line_h"
        android:background="@color/colorf8f8f8" />


    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/magin_12"
        android:paddingRight="@dimen/magin_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.th.j.commonlibrary.contrarywind.view.WheelView
                android:id="@+id/wheelview"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

            <com.th.j.commonlibrary.contrarywind.view.WheelView
                android:id="@+id/wheelview3"
                android:layout_width="@dimen/size_30"
                android:layout_height="wrap_content"
                />
            <com.th.j.commonlibrary.contrarywind.view.WheelView
                android:id="@+id/wheelview2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/my_line_h"
                android:background="@color/coloreeeeee" />

            <LinearLayout
                android:id="@+id/repeat_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_15"
                    android:layout_marginTop="@dimen/magin_15"
                    android:text="重复"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:id="@+id/tv_repeat_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/magin_10"
                    android:drawableRight="@drawable/icon_right_jiantou"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />

            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:background="@color/coloreeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/magin_15"
                    android:layout_marginTop="@dimen/magin_15"
                    android:text="提醒内容"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/font14" />

                <EditText
                    android:id="@+id/et_shuru"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入提醒内容"
                    android:maxLength="11"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="@dimen/font14" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_save"
                style="@style/my_bt"
                android:layout_marginLeft="@dimen/weight_0"
                android:layout_marginRight="@dimen/weight_0"
                android:layout_marginTop="@dimen/magin_25"
                android:background="@drawable/xinzhengdizhi_button"
                android:text="@string/sure2" />

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/my_bt"
                android:layout_marginBottom="@dimen/magin_20"
                android:layout_marginLeft="@dimen/weight_0"
                android:layout_marginRight="@dimen/weight_0"
                android:layout_marginTop="@dimen/magin_20"
                android:background="@drawable/naozhongcancel_button"
                android:text="@string/cancal"
                android:textColor="@color/color999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>