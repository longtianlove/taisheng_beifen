<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_15"
        android:background="@drawable/bg_device_binding"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.th.j.commonlibrary.wight.CircleImageView
            android:id="@+id/sdv_header"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginLeft="@dimen/magin_12"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_14"
            android:layout_marginLeft="@dimen/margin_14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:text="沉浸深海の鱼"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font18" />

            <TextView
                android:id="@+id/tv_zhanghao"
                android:layout_width="115dp"
                android:layout_height="17dp"
                android:layout_marginTop="9dp"
                android:text="账号：13424940234"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font14" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>