<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="110dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/me_kapian_background"
        android:weightSum="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImage="@drawable/doctor_default"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/doctor_default"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundedCornerRadius="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:text="沉浸深海の鱼"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_zhanghao"
                android:layout_width="115dp"
                android:layout_height="17dp"
                android:layout_marginTop="9dp"
                android:text="账号：13424940234"
                android:textColor="#ff333333"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>