<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="17dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_article"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/article_default"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/article_default"
        fresco:placeholderImageScaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:text="健康美食搭配，助您身心健康助您身心健康助您身心健康助您身心健康"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="纯天然无污染，野生枸杞，精挑细选，这是一段文字性描述。"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_counterprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ssssss"
                android:textColor="#ffff3b30"
                android:layout_gravity="bottom"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="积分"
                android:layout_gravity="bottom"
                android:textColor="#ff999999"
                android:textSize="12sp" />
            <!--            <TextView-->
            <!--                android:id="@+id/tv_retailprice"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text=""-->
            <!--                android:layout_marginLeft="5dp"-->
            <!--                android:textColor="#ff999999"-->
            <!--                android:textSize="15sp"-->
            <!--                />-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>