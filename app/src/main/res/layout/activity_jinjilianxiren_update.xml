<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView style="@style/iv_title" />

    <TextView
        style="@style/my_line_h"
        android:background="@color/colorf8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="姓名"
            android:maxLength="11"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_nickname_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="11dp"
            android:src="@drawable/icon_guanbi"

            />









</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_phone_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="11dp"
            android:src="@drawable/icon_guanbi"

            />

    </LinearLayout>

<View
android:background="#EEEEEE"
android:layout_height="1dp"
android:layout_marginLeft="12dp"
android:layout_marginRight="12dp"
android:layout_width="match_parent" />

<TextView
android:background="@drawable/xml_login_background"
android:enabled="true"
android:gravity="center"
android:id="@+id/btn_update"
android:layout_height="39dp"
android:layout_marginLeft="37dp"
android:layout_marginRight="35dp"
android:layout_marginTop="50dp"
android:layout_width="match_parent"
android:text="确定"
android:textColor="@color/white"
android:textSize="14sp"></TextView></LinearLayout>