<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.taisheng.now.view.WithListViewScrollView
        android:id="@+id/scl_bag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/bannerContaner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_260" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_counterprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="33333"
                    android:textColor="@color/colorff3b30"
                    android:textSize="@dimen/font16" />


                <TextView
                    android:id="@+id/tv_jifenlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="积分"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/font12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_retailprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="222222"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/font12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/magin_12"
                    android:src="@drawable/goodshare" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="健康美食搭配，助您身心健康助您身心健康助您身心健康助您身心健康"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:layout_marginTop="@dimen/margin_5"
                android:text="纯天然无污染，野生枸杞，精挑细选，这是一段文字性描述。"
                android:textColor="@color/color999999"
                android:textSize="@dimen/font12" />

            <TextView
                style="@style/my_line_h"
                android:layout_height="@dimen/size_10"
                android:background="@color/colorf6f6f6" />

            <LinearLayout
                android:id="@+id/ll_guige"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center_vertical"
                    android:text="规格"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />


                <TextView
                    android:id="@+id/tv_guigeresult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_10"
                    android:drawableRight="@drawable/jiantou_hui"
                    android:gravity="right|center_vertical"
                    android:text="请选择"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12" />


            <LinearLayout
                android:id="@+id/ll_canshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center_vertical"
                    android:text="参数"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:id="@+id/tv_canshu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_10"
                    android:drawableRight="@drawable/jiantou_hui"
                    android:gravity="right|center_vertical"
                    android:text="请选择"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/font14" />

            </LinearLayout>

            <TextView
                style="@style/my_line_h"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/magin_12"
                android:layout_marginRight="@dimen/magin_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center_vertical"
                    android:text="选择"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/margin_10"
                    android:drawableRight="@drawable/jiantou_hui"
                    android:gravity="right|center_vertical"
                    android:text="老人专用健康智能手环 ，1只"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/font14" />

            </LinearLayout>


            <TextView
                style="@style/my_line_h"
                android:layout_height="@dimen/size_10"
                android:background="@color/colorf6f6f6" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:text="商品详情"
                android:textColor="@color/color333333"
                android:textSize="@dimen/font14" />

            <WebView
                android:id="@+id/wv_shangpinxiangqing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/weight_0"
                android:layout_weight="1" />

        </LinearLayout>

    </com.taisheng.now.view.WithListViewScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_55"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gouwuche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_20"
            android:src="@drawable/shangpinxiangqing_gouwuche" />

        <TextView
            android:id="@+id/tv_addgouwuche"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:layout_marginLeft="@dimen/magin_30"
            android:layout_weight="1"
            android:background="@drawable/gouwuche_background"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_goumai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:layout_marginRight="@dimen/magin_15"
            android:layout_weight="1"
            android:background="@drawable/lijigoumai_background"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font14" />
    </LinearLayout>

</LinearLayout>