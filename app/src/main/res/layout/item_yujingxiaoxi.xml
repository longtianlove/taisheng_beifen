<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_12"
        android:layout_marginRight="@dimen/magin_12"
        android:layout_marginTop="@dimen/magin_10"
        android:background="@drawable/bg_white_r5">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginBottom="@dimen/magin_8"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_15">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_jiancexiaoxi" />

            <TextView
                android:id="@+id/iv_weidu"
                android:layout_width="@dimen/magin_8"
                android:layout_height="@dimen/magin_8"
                android:layout_alignRight="@+id/iv_icon"
                android:layout_marginLeft="@dimen/magin_20"
                android:background="@drawable/circle_red" />

            <TextView
                android:id="@+id/tv_jiancetongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_logo"
                android:text="监测通知"
                android:textColor="@color/color666666"
                android:textSize="@dimen/font14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="监测通知"
                android:textColor="@color/color999999"
                android:textSize="@dimen/font12" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv"
            style="@style/my_line_h"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:background="@color/coloreeeeee" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginBottom="@dimen/magin_15"
            android:layout_marginLeft="@dimen/magin_15"
            android:layout_marginRight="@dimen/magin_15"
            android:layout_marginTop="@dimen/magin_10"
            android:ellipsize="end"
            android:lineSpacingExtra="1.5dp"
            android:maxLines="2"
            android:text="您好，这里是系统消息，仅显示部分摘要内容。字数维持在两行之内，不超两行。"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font14" />
    </RelativeLayout>

</LinearLayout>