<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:text="泰晟健康"
                android:textColor="#ffffffff"
                android:textSize="17sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zhanghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="59dp"
            android:paddingRight="59dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_user"

                    />

                <EditText
                    android:id="@+id/et_zhanghao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名/手机号"
                    android:maxLength="20"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_zhanghao_guanbi"
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/icon_guanbi"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_mima" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入6-16位密码"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_password_yincang"
                    android:layout_width="17dp"
                    android:layout_height="10dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/yincang_background"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19dp"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/btn_zhanghao_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/xml_login_background"
                android:enabled="false"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tv_yanzhengma_change"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="验证码登录"
                android:textColor="#529FFB"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="59dp"
            android:paddingRight="59dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/et_shoujihao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入您的手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_shoujihao_guanbi"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/icon_guanbi"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_yanzhengma" />

                <EditText
                    android:id="@+id/et_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_yanzhengma"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:background="@drawable/login_yanzhengma_background"
                    android:text="获取验证码"
                    android:textColor="#fff" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19dp"
                android:background="#EEEEEE" />

            <TextView
                android:id="@+id/btn_yanzhengma_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/xml_login_background"
                android:enabled="false"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tv_zhanghao_change"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="密码登录"
                android:textColor="#529FFB"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fuwuxieyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="登录即代表阅读并同意"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuwuxieyi"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>