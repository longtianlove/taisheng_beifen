<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/magin_12"
        android:paddingRight="@dimen/magin_12">

        <TextView
            android:id="@+id/tv_takepillsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magin_12"
            android:text="提醒内容"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv"
            style="@style/my_line_h"
            android:layout_below="@+id/tv_takepillsText"
            android:layout_marginBottom="@dimen/magin_12"
            android:layout_marginTop="@dimen/magin_8"
            android:background="@color/coloreeeeee" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:text="7:50"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pinlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginBottom="@dimen/magin_12"
            android:text="每天"
            android:textColor="@color/color666666"
            android:textSize="@dimen/font14" />

        <ImageView
            android:id="@+id/iv_kaiguan_naozhong"
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_40"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_time"
            android:src="@drawable/dizhi_default" />
    </RelativeLayout>

    <TextView
        style="@style/my_line_h"
        android:layout_height="@dimen/size_12" />
</LinearLayout>