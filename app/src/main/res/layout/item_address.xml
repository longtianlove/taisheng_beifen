<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/magin_12"
            android:layout_marginRight="10dp"
            android:src="@drawable/circle_green" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/magin_10"
            android:layout_marginLeft="@dimen/magin_12"
            android:layout_marginRight="@dimen/magin_12"
            android:layout_marginTop="@dimen/magin_10"
            android:layout_toRightOf="@+id/iv_dot"
            android:gravity="center_vertical"
            android:text="name"
            android:singleLine="true"
            android:textColor="@color/color333333"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginBottom="@dimen/magin_10"
            android:layout_marginLeft="@dimen/magin_12"
            android:layout_marginRight="@dimen/magin_12"
            android:layout_toRightOf="@+id/iv_dot"
            android:gravity="center_vertical"
            android:text="address"
            android:textColor="@color/color666666"
            android:textSize="@dimen/font14" />

    </RelativeLayout>

    <TextView
        style="@style/my_line_h"
        android:background="@color/coloreeeeee" />

</LinearLayout>